{{ attach_library('modern_simple/modern-frontpage') }}

<img id="background-image" src="/themes/custom/modern_simple/images/page-bg.svg" alt ="bg-image" />
<div class="frontpage-container">
    <div class="frontpage-menu">
        {{ page.primary_menu }}
    </div>
    <div class="frontpage-secondary-menu">
        {{ page.secondary_menu }}
    </div>
    <div class="frontpage-content">
        <div class="frontpage-title">
            <h1 id="site-title"> {{site_name}} </h1> 
            <p id="site-slogan"> {{site_slogan}} </p>
        </div>
        <div class= "frontpage-content">
            {{page.content}}
        </div>
    </div>
    {% if page.footer %}
    <footer role="contentinfo" class="frontpage-footer">
        {{ page.footer }}
    </footer>
    {% endif %}
</div>